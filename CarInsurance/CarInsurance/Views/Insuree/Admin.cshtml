@model List<CarInsurance.Models.Insuree>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-8 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Insuree Quotes</h5>
        </div>
        <div class="card-body">
            @foreach (var insuree in Model)
            {
                <div class="row mb-3 align-items-center">
                    <div class="col-3">
                        <strong>First Name:</strong>
                        <div>@insuree.FirstName</div>
                    </div>
                    <div class="col-3">
                        <strong>Last Name:</strong>
                        <div>@insuree.LastName</div>
                    </div>
                    <div class="col-4">
                        <strong>Email:</strong>
                        <div>@insuree.EmailAddress</div>
                    </div>
                    <div class="col-2 text-right">
                        <strong>Quote:</strong>
                        <div>@insuree.Quote.ToString("C")</div> <!-- Display as currency -->
                    </div>
                </div>
                <hr />
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
